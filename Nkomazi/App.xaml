<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Nkomazi"
             x:Class="Nkomazi.App">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- _______________________________________________  D E F A U L T   G L O B A L   S T Y L I N G _________________________________________-->

            <!-- Global Font Size -->
            <OnIdiom x:Key="DefaultFontSize" x:TypeArguments="x:Double"
                Phone="16"
                Tablet="16"
                Desktop="18" />
            <!-- Global Padding -->
            <OnIdiom x:Key="DefaultButtonPadding" x:TypeArguments="Thickness"
                Phone="8,4"
                Tablet="10,6"
                Desktop="12,6" />

            <!-- _____________________________________________________ D E F A U L T   C O N T R O L S ___________________________________________________-->
            <!-- Global default style for Label -->
            <Style TargetType="Label" x:Name="label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="FontSize" Value="14" />
            </Style>

            <!-- Global Border Style -->
            <Style TargetType="Border">
                <Setter Property="BackgroundColor" Value="#171717" />
                <Setter Property="Padding" Value="5" />
            </Style>

            <!-- Global Entry Style -->
            <Style TargetType="Entry">
                <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
                <Setter Property="PlaceholderColor" Value="White" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="Black" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="Opacity" Value="1" />
            </Style>

            <!-- Global Grid Style -->
            <Style TargetType="Grid">
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="VerticalOptions" Value="Fill" />
                <Setter Property="BackgroundColor" Value="#212121" />
            </Style>

            <!-- _____________________________________________________  B U T T O N    S T Y L I N G ___________________________________________________-->
            <!-- Global Accept Button/Hover Style -->
            <Style TargetType="Button"
                    x:Key="btnSubmit">
                <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
                <Setter Property="Padding" Value="{StaticResource DefaultButtonPadding}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="#303030" />
                <Setter Property="CornerRadius" Value="10" />

                <Setter Property="VisualStateManager.VisualStateGroups">
                    <Setter.Value>
                        <VisualStateGroupList>
                            <VisualStateGroup Name="CommonStates">
                                <!-- Normal -->
                                <VisualState Name="Normal" />

                                <!-- Hover -->
                                <VisualState Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#505050" />
                                    </VisualState.Setters>
                                </VisualState>

                                <!-- Pressed -->
                                <VisualState Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#606060" />
                                    </VisualState.Setters>
                                </VisualState>

                                <!-- Disabled -->
                                <VisualState Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2a2a2a" />
                                        <Setter Property="TextColor" Value="#888888" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Global Cancel Button/Hover Style -->
            <Style TargetType="Button"
                    x:Key="btnCancel">
                <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
                <Setter Property="Padding" Value="{StaticResource DefaultButtonPadding}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="#FF3131" />
                <Setter Property="CornerRadius" Value="10" />

                <Setter Property="VisualStateManager.VisualStateGroups">
                    <Setter.Value>
                        <VisualStateGroupList>
                            <VisualStateGroup Name="CommonStates">
                                <!-- Normal -->
                                <VisualState Name="Normal" />

                                <!-- Hover -->
                                <VisualState Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="Red" />
                                    </VisualState.Setters>
                                </VisualState>

                                <!-- Pressed -->
                                <VisualState Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#FF3131" />
                                    </VisualState.Setters>
                                </VisualState>

                                <!-- Disabled -->
                                <VisualState Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2a2a2a" />
                                        <Setter Property="TextColor" Value="#888888" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Global Save Button/Hover Style -->
            <Style TargetType="Button"
                    x:Key="btnSave">
                <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
                <Setter Property="Padding" Value="{StaticResource DefaultButtonPadding}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="#06402B" />
                <Setter Property="CornerRadius" Value="10" />

                <Setter Property="VisualStateManager.VisualStateGroups">
                    <Setter.Value>
                        <VisualStateGroupList>
                            <VisualStateGroup Name="CommonStates">
                                <!-- Normal -->
                                <VisualState Name="Normal" />

                                <!-- Hover -->
                                <VisualState Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#053625" />
                                    </VisualState.Setters>
                                </VisualState>

                                <!-- Pressed -->
                                <VisualState Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#606060" />
                                    </VisualState.Setters>
                                </VisualState>

                                <!-- Disabled -->
                                <VisualState Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2a2a2a" />
                                        <Setter Property="TextColor" Value="#888888" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Global Normal Button/Hover Style -->
            <Style TargetType="Button"
                x:Key="btnNormal">
                <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
                <Setter Property="Padding" Value="{StaticResource DefaultButtonPadding}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="#303030" />
                <Setter Property="CornerRadius" Value="10" />

                <Setter Property="VisualStateManager.VisualStateGroups">
                    <Setter.Value>
                        <VisualStateGroupList>
                            <VisualStateGroup Name="CommonStates">
                                <!-- Normal -->
                                <VisualState Name="Normal" />

                                <!-- Hover -->
                                <VisualState Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#171717" />
                                    </VisualState.Setters>
                                </VisualState>

                                <!-- Pressed -->
                                <VisualState Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#606060" />
                                    </VisualState.Setters>
                                </VisualState>

                                <!-- Disabled -->
                                <VisualState Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2a2a2a" />
                                        <Setter Property="TextColor" Value="#888888" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- implicit default for every Button -->
            <Style TargetType="Button">
                <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}" />
                <Setter Property="Padding"   Value="{StaticResource DefaultButtonPadding}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="#303030" />
                <Setter Property="CornerRadius" Value="10" />

                <Setter Property="VisualStateManager.VisualStateGroups">
                    <Setter.Value>
                        <VisualStateGroupList>
                            <VisualStateGroup Name="CommonStates">
                                <VisualState Name="Normal" />

                                <VisualState Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#171717" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#606060" />
                                    </VisualState.Setters>
                                </VisualState>

                                <VisualState Name="Disabled">
                                    <VisualState.Setters>
                                        <Setter Property="BackgroundColor" Value="#2a2a2a" />
                                        <Setter Property="TextColor" Value="#888888" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateGroupList>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
