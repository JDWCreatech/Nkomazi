<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nkomazi.Pages.Orders"
             Title="Orders">

    <ScrollView>
        <!-- Optional: for scrolling if content is long -->
        <VerticalStackLayout Padding="10" Spacing="20">

            <!-- Grid 1 -->
            <Grid ColumnDefinitions="*, *">
                <Label Text="Label 1" Grid.Column="0" />
                <Button Text="Button 1" Grid.Column="1" />
            </Grid>

            <!-- Grid 2 -->
            <Grid ColumnDefinitions="*, *">
                <Label Text="Label 2" Grid.Column="0" />
                <Button Text="Button 2" Grid.Column="1" />
            </Grid>

            <!-- Grid 3 -->
            <Grid ColumnDefinitions="*, *">
                <Label Text="Label 3" Grid.Column="0" />
                <Button Text="Button 3" Grid.Column="1" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>